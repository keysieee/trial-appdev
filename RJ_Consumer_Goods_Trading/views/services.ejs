<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services</title>
    <style>
        /* Reset some default styles */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        /* Background and font settings */
        body, html {
            font-family: Arial, sans-serif;
            height: 100%;
            background: url('images/background.png') no-repeat center center fixed;
            background-size: cover;
        }

        /* Main container */
        .container { display: flex; }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #3e3e3e;
            padding: 30px;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo img { width: 60px; border-radius: 50%; }
        .logo h2 { text-align: center; margin-top: 10px; font-size: 1.1em; }

        /* Sidebar menu items */
        .sidebar nav { margin-top: 30px; width: 100%; }
        .menu-item {
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #8d4444;
            text-decoration: none;
            color: white;
            text-align: center;
            border-radius: 5px;
        }
        .menu-item.active { background-color: #ff4a4a; }

        /* Logout button styling */
        .logout {
            margin-top: auto;
            padding: 10px;
            background-color: #ff4a4a;
            color: white;
            width: 100%;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Main content styling */
        main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .search {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .icons .icon {
            margin-left: 10px;
            cursor: pointer;
        }

        /* Content area */
        .content {
            margin-top: 20px;
        }

        .content h2 { font-size: 1.5em; color: #336666; }

        /* Tab buttons */
        .tab-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .tabs {
            display: flex;
            gap: 10px;
        }

        .tab-button {
            padding: 10px;
            background-color: #8d4444;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        .tab-button.active {
            background-color: #ff4a4a;
        }

        /* Add button styling */
        .add-button {
            padding: 10px;
            background-color: #ff4a4a;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Tab content styling */
        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ccc;
        }

        th { background-color: #8c8c8c; color: white; }
        td { background-color: #ddd; }

        /* Modal styling */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            width: 400px;
            border-radius: 10px;
            text-align: center;
        }

        .modal-content h3 {
            margin-bottom: 15px;
            color: #336666;
        }

        .modal-content input, .modal-content select {
            width: 90%;
            padding: 8px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .modal-content button {
            padding: 10px;
            background-color: #ff4a4a;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <img src="images/logo.png" alt="R&J Logo">
                <h2>R&J CONSUMER GOODS TRADING</h2>
            </div>
            <nav>
                <a href="/tasks" class="menu-item">Tasks</a>
                <a href="/inout" class="menu-item">In/Out</a>
                <a href="/services" class="menu-item active">Services</a>
                <a href="/inventory" class="menu-item">Inventory</a>
                <a href="/empshop" class="menu-item">Shop</a>
            </nav>
            <button class="logout" onclick="window.location.href='/logout'">Logout</button>
        </aside>

        <!-- Main Content -->
        <main>
            <header class="header">
                <input type="text" placeholder="Type here..." class="search">
                <div class="icons">
                    <a href="/home" class="icon">üè†</a>
                    <span class="icon">üë§</span>
                </div>
            </header>

            <section class="content">
                <h2>Services</h2>
                
                <!-- Tabs and Add Button -->
                <div class="tab-container">
                    <div class="tabs">
                        <button class="tab-button active" onclick="showTab('returnsTab')">Return & Refunds</button>
                        <button class="tab-button" onclick="showTab('discountsTab')">Discount & Promotion</button>
                    </div>
                    <button class="add-button" onclick="openModal()">+ Add</button>
                </div>

                <!-- Tab Content -->
                <div id="returnsTab" class="tab-content active">
                    <table>
                        <tr>
                            <th>Customer Name</th>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Reason</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                        <!-- Table rows go here -->
                    </table>
                </div>

                <div id="discountsTab" class="tab-content">
                    <table>
                        <tr>
                            <th>Customer Name</th>
                            <th>Item</th>
                            <th>Discount</th>
                            <th>Action</th>
                        </tr>
                        <!-- Table rows go here -->
                    </table>
                </div>
            </section>
        </main>
    </div>

    <!-- Modals for adding items -->
    <div id="returnModal" class="modal">
        <div class="modal-content">
            <h3>Add Return & Refund</h3>
            <input type="text" placeholder="Customer Name" id="returnCustomerName">
            <input type="text" placeholder="Item" id="returnItem">
            <input type="number" placeholder="Quantity" id="returnQuantity">
            <input type="text" placeholder="Reason" id="returnReason">
            <input type="number" placeholder="Price" id="returnPrice">
            <button onclick="addReturn()">Submit</button>
            <button onclick="closeModal()" class="back-button">Back</button>
        </div>
    </div>

    <div id="discountModal" class="modal">
        <div class="modal-content">
            <h3>Add Discount & Promotion</h3>
            <input type="text" placeholder="Customer Name" id="discountCustomerName">
            <input type="text" placeholder="Item" id="discountItem">
            <input type="number" placeholder="Discount (%)" id="discountValue">
            <button onclick="addDiscount()">Submit</button>
            <button onclick="closeModal()" class="back-button">Back</button>
        </div>
    </div>

    <script>
        let activeTab = 'returnsTab';

        function showTab(tabId) {
            activeTab = tabId;
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelector([onclick="showTab('${tabId}')"]).classList.add('active');
        }

        function openModal() {
            if (activeTab === 'returnsTab') {
                document.getElementById('returnModal').style.display = 'flex';
            } else if (activeTab === 'discountsTab') {
                document.getElementById('discountModal').style.display = 'flex';
            }
        }

        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => modal.style.display = 'none');
        }

        function addReturn() {
            // Capture input values and handle adding to the "Return & Refunds" table
            closeModal();
            alert('Return added successfully!');
        }

        function addDiscount() {
            // Capture input values and handle adding to the "Discount & Promotion" table
            closeModal();
            alert('Discount added successfully!');
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                closeModal();
            }
        }
    </script>
</body>
</html>
