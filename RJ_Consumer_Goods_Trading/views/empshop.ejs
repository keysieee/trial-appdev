<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Shop</title>
    <style>
        /* Reset some default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Background and font settings */
        body, html {
            font-family: Arial, sans-serif;
            height: 100%;
            background: url('images/background.png') no-repeat center center fixed;
            background-size: cover;
        }

        /* Main container */
        .container {
            display: flex;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #3e3e3e;
            padding: 30px;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo img {
            width: 60px;
            border-radius: 50%;
        }

        .logo h2 {
            text-align: center;
            margin-top: 10px;
            font-size: 1.1em;
        }

        /* Sidebar menu items */
        .sidebar nav {
            margin-top: 30px;
            width: 100%;
        }

        .menu-item {
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #8d4444;
            text-decoration: none;
            color: white;
            text-align: center;
            border-radius: 5px;
        }

        .menu-item.active {
            background-color: #ff4a4a;
        }

        /* Logout button styling */
        .logout {
            margin-top: auto;
            padding: 10px;
            background-color: #ff4a4a;
            color: white;
            width: 100%;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Main content styling */
        main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .search {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .icons .icon {
            margin-left: 10px;
            cursor: pointer;
        }

        /* Content area */
        .content {
            margin-top: 20px;
        }

        .content h2 {
            font-size: 1.5em;
            color: #336666;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ccc;
        }

        th {
            background-color: #8c8c8c;
            color: white;
        }

        td {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <img src="images/logo.png" alt="R&J Logo">
                <h2>R&J CONSUMER GOODS TRADING</h2>
            </div>
            <nav>
                <a href="/tasks" class="menu-item">Tasks</a>
                <a href="/inout" class="menu-item active">In/Out</a>
                <a href="/services" class="menu-item">Services</a>
                <a href="/inventory" class="menu-item">Inventory</a>
                <a href="/empshop" class="menu-item">Shop</a>
            </nav>
            <button class="logout" onclick="window.location.href='/logout'">Logout</button>
        </aside>

        <!-- Main Content -->
        <main>
            <header class="header">
                <input type="text" placeholder="Type here..." class="search">
                <div class="icons">
                    <a href="/home" class="icon">üè†</a>
                    <span class="icon">üë§</span>
                </div>
            </header>

            <section class="content">
                <h2>Branches / Shop</h2>
                <table>
                    <tr>
                        <th>Branch</th>
                        <th>Location</th>
                    </tr>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
